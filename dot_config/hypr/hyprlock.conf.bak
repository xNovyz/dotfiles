
general {
    disable_loading_bar = true
    hide_cursor = true
}

# BACKGROUND
background {
    monitor =
    path = ~/.config/wal_frame.png
    blur_passes = 1
    color = #2C2C2C  # Dark gray color for the background
}

# TIME
label {
    monitor =
    text = cmd[update:30000] echo "$(date +"%R")"
    color = #D3D3D3  # Light gray color for text
    font_size = 90
    font_family = $font
    position = -50, -30
    # position = -30, 0
    halign = right
    valign = top
}

# DATE 
label {
    monitor = 
    text = cmd[update:43200000] echo "$(date +"%A, %d %B %Y")"
    color = #B0B0B0  # Lighter gray for date text
    position = -50, 30
    font_size = 25
    font_family = $font
    position = -30, -150
    halign = right
    valign = top
}

# USER AVATAR
image {
    monitor = 
    path = ~/Pictures/gengar.png
    size = 100
    border_color = #808080  # Medium gray for the border

    position = 0, 75
    halign = center
    valign = center
}

# INPUT FIELD
input-field {
    monitor =
    size = 300, 60
    outline_thickness = 4
    dots_size = 0.2
    dots_spacing = 0.2
    dots_center = true
    outer_color = #808080  # Medium gray for the outer color
    inner_color = #2C2C2C  # Dark gray for the input background
    font_color = #D3D3D3  # Light gray for font color
    fade_on_empty = false
    placeholder_text = <span foreground="##808080"><i>ó°Œ¾ Logged in as </i><span foreground="##808080">$USER</span></span>
    hide_input = false
    check_color = #B0B0B0  # Light gray for check color
    fail_color = #B0B0B0  # Light gray for fail color
    fail_text = <i>$FAIL <b>($ATTEMPTS)</b></i>
    capslock_color = #D3D3D3  # Light gray for capslock color
    position = 0, -35
    halign = center
    valign = center
}

